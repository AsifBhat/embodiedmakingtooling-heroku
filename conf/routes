# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                              controllers.Application.index

# REST Services
GET        /api                           controllers.Services.api
GET        /api/clusters                  controllers.Services.clusters
GET        /api/clusters/:id              controllers.Services.cluster(id: String)
POST       /api/clusters                  controllers.Services.createCluster
PUT        /api/clusters/:id              controllers.Services.updateCluster(id: String)
DELETE     /api/clusters/:id              controllers.Services.deleteCluster(id:String)
GET        /api/stories                   controllers.Services.stories
GET        /api/stories/:id               controllers.Services.story(id: String)
GET        /api/forces                    controllers.Services.forces
GET        /api/forces/:id                controllers.Services.force(id: String)
GET        /api/solutionComponents        controllers.Services.solutionComponents
GET        /api/solutionComponents/:id    controllers.Services.solutionComponent(id: String)
POST       /api/importcontent             controllers.Services.importFile

# Utilities
GET		   /export          			  controllers.Utilities.exportAsGexf

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)
